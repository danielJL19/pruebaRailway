<div>
  <h1 class="font-bold text-4xl">Lista de artículos</h1>

  <% @posts.each do |post|%>
    <div class="my-3">
      <h3> Nombre post: <%= post.name  %> </h3>
      <p> Descripción:  <%= post.body %> </p>
      <p> Creado por : <%= post.user.name %></p>
    </div>
  <% end %>
  <% if current_user %>
    <li><%= link_to "Sign out", destroy_user_session_path, data:{turbo_method: :delete}  %></li>
  <% else %>
    <li><%= link_to "Sign up", new_user_registration_path %></li>
    <li><%= link_to "Sign in", new_user_session_path %></li>
  <% end %>
</div>
